#include "mbed.h"

DigitalIn encoderA(A0); // A相のピン A0からA5
DigitalIn encoderB(A1); // B相のピン A0からA5
PwmOut my_servo(D3);
AnalogIn ain(A5);

BufferedSerial pc(USBTX, USBRX, 250000); // パソコンとのシリアル通信

int main()
{
    my_servo.period(0.020); // servo requires a 20ms period
    while (1)
    {
        if (pc.readable())
        {
            char buf;
            pc.read(&buf, sizeof(buf));

            if (buf == 'U' || buf == 'u') // 左
            {
                for (int i = 0; i < 100; i++)
                {
                    my_servo = i / 100.0;
                    ThisThread::sleep_for(1ms);
                }
            }
            if (buf == 'I' || buf == 'i') // 右
            {
                for (int i = 100; i > 0; i--)
                {
                    my_servo = i / 100.0;
                    ThisThread::sleep_for(1ms);
                }
            }
        }
    }
}
