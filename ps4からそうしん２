//送信側のプログラム//上下左右ボタンを押そう！！！！！！
#include <HardwareSerial.h>
#include <PS4Controller.h>

HardwareSerial SerialPort(2);  // use UART2

void setup() {
  SerialPort.begin(15200, SERIAL_8N1, 16, 17);
  Serial.begin(115200);
  PS4.begin("70:b8:f6:5c:80:16");  //70:b8:f6:5c:80:16
  Serial.println("Ready.");
}




void loop() {
  if (PS4.Right()) {
    SerialPort.print("RIGHT");
    SerialPort.print("\n");
    Serial.print("RIGHT");

  } else if (PS4.Left()) {
    SerialPort.print("LEFT");
    SerialPort.print("\n");
    Serial.print("LEFT");
  } else if (PS4.Up()) {
    SerialPort.print("UP");
    SerialPort.print("\n");

    Serial.print("UP");
  } else if (PS4.Down()) {
    SerialPort.print("DOWN");
    SerialPort.print("\n");

    Serial.print("DOWN");
  }
  Serial.print("\n");
  delay(5);
}
